@section scripts {
    @Scripts.Render("~/bundles/app")
}

<div class="container" style="margin-top: 5%;">
    <div class="row">
        <div class="col-md-10">
            <!-- FORM -->
            <div class="panel panel-default">
                <div class="panel-heading"> <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span> <b>&nbsp;  Add new thing to do</b></div>
                <div class="panel-body">
                    <form>
                        <div class="form-group" style="display:none;">
                            <label class="col-md-2" for="ToDoId">ID</label>
                            <div class="col-md-10">
                                <input type="text" id="ToDoId" class="form-control" data-bind="value:Id" placeholder="Id" />
                            </div>
                        </div><!-- END ID If -->

                        <div class="form-group">
                            <label class="col-md-2" for="Description">Thing to do</label>
                            <div class="col-md-10">
                                <textarea id=" Description" class="form-control" rows="2"  data-bind='value: Description,valueUpdate: "afterkeydown", hasFocus: Description()' placeholder="Enter thing to do..." autofocus></textarea>
                            </div>
                        </div><!-- END DESCRIPTION = Thing to Do -->
                        
                        <div class="form-group">
                            <label class="col-md-2" for="IsDone">Is Done</label>
                            <div class="col-md-10">
                                <input type="checkbox" class="checkbox" id="IsDone" data-bind="checked: IsDone" />
                            </div>
                        </div><!-- END ISDONE -->

                        <div class="col-md-2"></div>
                        <div class="col-md-10" style="padding-top:3%;">
                            <button type="button" class="btn btn-success btn-sm space" data-bind="enable: Description().length > 0, click: addNewToDo" id="Save">
                                <span class="glyphicon-floppy-disk" aria-hidden="true"></span> Save
                            </button>
                            <button type="button" class="btn btn-info btn-sm space" data-bind="click: clearFields" id="Clear">
                                <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Clear
                            </button>
                            <button type="button" class="btn btn-warning btn-sm space" data-bind="click:updateToDo " style="display:none;" id="Update">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update
                            </button>
                            <button type="button" class="btn btn-default btn-sm space" data-bind="click:cancel " style="display:none;" id="Cancel">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel
                            </button>
                        </div>

                    </form> <!-- END FORM -->
                </div> <!-- END PANEL BODY-->
            </div><!-- END PANEL-->
        </div> <!-- END  col-md-10 -->
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-list" aria-hidden="true"></span>  <b>&nbsp; List of thing to do </b>
                </div>
                <div class="panel-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th><span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span></th>
                                <th>ID</th>
                                <th>Thing to Do</th>
                                <th>Is Done</th>
                                <th><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></th>
                            </tr>
                        </thead> <!-- END THEAD -->
                        <tbody data-bind="foreach: toDoList">
                            <tr>
                                <td>
                                    <button type="button" class="btn btn-warning btn-xs">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true" data-bind="click: $root.detailToDo" title = "Edit item"></span>
                                    </button>
                                </td>
                                <td> <span data-bind="text: Id"></span> </td>
                                <td> <span data-bind="text: Description"></span></td>
                                <td> <input type="checkbox" data-bind="checked: IsDone" disabled></td>
                                <td>
                                    <button type="button" class="btn btn-danger btn-xs">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true" data-bind="click: $root.deleteToDo" title = "Delete item" ></span>
                                    </button>
                                </td>
                            </tr>
                        </tbody> <!-- END TBODY -->
                    </table> <!-- END TABLE -->
                </div>
            </div>
        </div>
    </div>
</div> <!-- END CONTAINER-->

